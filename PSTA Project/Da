                color: white;
                text-shadow: 2px 2px 4px #000000;
                font-size: 2.5em;
            }}
            
            .subtitle {{
                text-align: center;
                color: white;
                margin-bottom: 30px;
            }}
            
            /* Styling for chat messages */
            .stChatMessage {{
                background-color: rgba(255, 255, 255, 0.9);
                border-radius: 10px;
                margin-bottom: 10px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }}
            
            /* Styling for buttons */
            .stButton > button {{
                background-color: #4CAF50;
